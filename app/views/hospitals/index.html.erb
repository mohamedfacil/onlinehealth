<h1 class = "text-light text-center bg-dark">Hospital List</h1>

<div class="hospital_page">

<%= link_to "Add New Hospital", new_hospital_path ,class:"btn btn-secondary btn-lg" %>
</div>
<br>
  <table class="table table-striped table-hover table-bordered table-sm">
  <thead class="table-dark">
    <tr>
      <th>Hospital name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.hospital_name %></td>
        <td><%= hospital.address %></td>
        <td><%= hospital.email %></td>
        <td><%= hospital.phone %></td>
        <td><%= link_to 'Show', hospital ,class:"btn btn-primary btn-sm"%></td>
        <td><%= link_to 'Edit', edit_hospital_path(hospital) ,class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
