<h1 class = "text-light text-center bg-dark">Patient List</h1>

<div class="patient_page">

<%= link_to "Add New Patient", new_patient_path ,class:"btn btn-secondary btn-lg" %>
</div>
<br>
  <table class="table table-striped table-hover table-bordered table-sm">
  <thead class="table-dark">
    <tr>
      <th>Pateint name</th>
      <th>Address</th>
      <th>Gender</th>
      <th>DOB</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.patient_name %></td>
        <td><%= patient.address %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.email %></td>
        <td><%= patient.phone %></td>
        <td><%= link_to 'Search Doctor', patient ,class:"btn btn-primary btn-sm"%></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) ,class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
